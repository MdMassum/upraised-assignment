
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  Available
  Deployed
  Destroyed
  Decommissioned
}

// gadget model
model Gadget {
  id              String    @id @default(uuid())
  name            String    @unique
  status          Status    @default(Available)
  decommissionedAt DateTime?
}

// user model
model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}